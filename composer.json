{
    "name": "project-template",
    "license": "MIT",
    "type": "project",
    "description": "Basic API project template",
    "autoload": {
        "psr-4": { "App\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": {"Tests\\": "tests"}
    },
    "require": {
        "php": "^7.1.3",
        "ext-iconv": "*",
        "bornfreee/tactician-domain-events-bundle": "^0.5.3",
        "fesor/request-objects": "^0.3.0",
        "gpslab/domain-event-bundle": "^2.1",
        "lexik/jwt-authentication-bundle": "^2.4",
        "nelmio/api-doc-bundle": "^3.1",
        "pascaldevink/shortuuid": "^2.0",
        "sensio/framework-extra-bundle": "^5.1",
        "symfony/asset": "^4.0",
        "symfony/console": "^4.0",
        "symfony/debug-bundle": "^4.0",
        "symfony/flex": "^1.0",
        "symfony/framework-bundle": "^4.0",
        "symfony/lts": "^4@dev",
        "symfony/monolog-bundle": "^3.1",
        "symfony/orm-pack": "^1.0",
        "symfony/profiler-pack": "^1.0",
        "symfony/security-bundle": "^4.0",
        "symfony/serializer-pack": "^1.0",
        "symfony/swiftmailer-bundle": "^3.2",
        "symfony/yaml": "^4.0"
    },
    "require-dev": {
        "behat/behat": "^3.4",
        "behat/symfony2-extension": "^2.1",
        "behatch/contexts": "^3.1",
        "friendsofphp/php-cs-fixer": "~2.0",
        "fzaninotto/faker": "^1.7",
        "phpspec/phpspec": "^4.3",
        "phpunit/phpunit": "^5.6",
        "symfony/dotenv": "^4.0",
        "symfony/phpunit-bridge": "^3.0"
    },
    "replace": {
        "symfony/polyfill-apcu": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "start": [
            "composer install",
            "docker-compose up -d",
            "docker-compose run --rm php bin/wait_for_db",
            "docker/shortcuts/console doctrine:migration:migrate -n --allow-no-migration",
            "docker/shortcuts/console doctrine:fixtures:load -n --fixtures tests/Fixtures/ORM"
        ],
        "prepare-project": [
            "ln -sf `pwd`/docker/scripts/hooks/pre-commit .git/hooks/pre-commit"
        ],
        "post-install-cmd": [
            "@prepare-project"
        ],
        "post-update-cmd": [
            "@prepare-project"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "config": {
        "bin-dir": "bin",
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    }
}
